<div class="container">

  <div class="card-title">
  <h2 class="p-3">My Products</h2>
</div>

 
  <table class="table">
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Category</th>
        <th>Date of creation</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= link_to product.name, product_path(product) %></td>
          <td><%= product.price %></td>
          <td><%= product.category %></td>
          <td><%= product.created_at %></td>

         
          <td><%= link_to "", edit_product_path(product), class: "far fa-edit"%></td>
          <td><%= link_to "",
                      product_path(product),
                      method: :delete,
                      data: { confirm: "Are you sure?" },
                      class: "far fa-trash-alt" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

 </div>



