<div class="container">
  <h1 class="p-3">My Products</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Category</th>
        <th>Edit</th>
        <th>Delete</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= link_to product.name, product_path(product) %></td>
          <td>R$ <%= product.price.to_i %></td>
          <td><%= product.category %></td>
          <td><%= link_to "", edit_product_path(product), class: "far fa-edit"%></td>
          <td><%= link_to "",
                      product_path(product),
                      method: :delete,
                      data: { confirm: "Are you sure?" },
                      class: "far fa-trash-alt" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
