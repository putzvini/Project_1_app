<div class="container">
  <div class="row row-cols-1 row-cols-md-3">
    <% @products.each do |product| %>
    <div class="col mb-4">
      <div class="card-index">
        <%= image_tag "https://source.unsplash.com/800x600/?#{product.name}", class: 'card-img' %>
        <div class="card-body">
          <h6><%= link_to product.name, product_path(product) %></h6>
          <p>R$ <%= product.price %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>





