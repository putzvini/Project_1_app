<div class="container" id="purchase">
  <h1 class="p-3">My Purchases</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Category</th>
        <th>Date of Purchase</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @purchases.each do |purchase| %>
        <tr>
          <td><%= link_to purchase.product.name, purchase_path(purchase) %></td>
          <td><%= purchase.value %></td>
          <td><%= purchase.product.category %></td>
          <td><%= purchase.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
